            </div>

        </div>*@
        <div class="form-group m-1">
            <label asp-for="LibraryDepartment"></label>
            <select class="form-select " asp-for="LibraryDepartment" asp-items="Html.GetEnumSelectList<Departments>()">
                <option>Please select...</option>
            </select>
            <span asp-validation-for="LibraryDepartment" class="text-danger"></span>
        </div>
        <div class="">
            <button class="btn btn-primary m-2" type="submit">Create</button>
            <a class="btn btn-primary m-2" asp-controller="home" asp-action="index">Cancel</a>
