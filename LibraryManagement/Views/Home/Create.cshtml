@model LibrarianModel
@{
    ViewBag.Title = "Create new librarian";
}

<div class="col-md-8 col-lg-6 col-sm-12 col-xl-4">
    <form enctype="multipart/form-data" asp-controller="home" asp-action="create" method="post">
        <div class="form-group m-1">
            <label asp-for="FullName"></label>
            <input asp-for="FullName" class="form-control" placeholder="fullname..." />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="form-group m-1">
            <label asp-for="Age"></label>
            <input asp-for="Age" class="form-control" placeholder="age..." />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
